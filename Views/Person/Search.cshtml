@{
}
<div style="display: flex;justify-content:space-evenly; align-items:center;width:100% ">
    <h1>Search</h1>
    <h3>
        <a asp-action="all">Chercher Personnes</a>
    </h3>
</div>



@{
    if (ViewBag.notFound)
    {
        <div style="padding: 20px; border-radius:10px; text-align:center" class="alert-danger">
            Cet personne n'existe pas s'il vous plait vérifier vos informations  
        </div>
    }
}
<h4>Person</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="search">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input name="first_name" type="text" class="form-control" />
            </div>


            <div class="form-group">
                <input name="country" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="SEARCH" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retourner List</a>
</div>
